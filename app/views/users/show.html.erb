	#ttimer #timer-display small {font-size: 14px; letter-spacing: 0}
	#ttimer #total-display {background-color: #FF8D6F; padding: 4px 2px 2px 2px; text-align: left; font: bold 16px arial, sans-serif; line-height: 11px}
