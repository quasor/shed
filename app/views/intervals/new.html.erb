<h1><%= @task.title%> (<%= link_to 'Edit', edit_task_path(@task)%>)</h1> 

<% form_for(@interval) do |f| %>
  <%= f.error_messages %>

	<%= f.hidden_field :task_id %>
	<% fields_for @interval.task do |task_fields| %>
		<%= task_fields.check_box :completed %>
				<span style="font-size:120%"><%= task_fields.label :completed%></span>
	<% end %>
	<div style="float:left">
	  <h3><%= f.label :hours %> (Today)</h3> 
		  <p>
		    <%= f.text_field :hours, :autocomplete => :off %>
		  </p>		
	</div>
	<div style="float:left; padding-left:2em">
		<h3>Start / Stop (optional)</h3>
	  <p>
	    <%= f.datetime_select :start %><br>
	    <%= f.datetime_select :end %>
	  </p>
		
	</div>
	<div style="clear:both">
    <%= f.submit "Save" %> or <%= link_to 'Back', root_path%>
	</div>
<% end %>
<% unless request.xhr? %>
<% else %>
<%= link_to_function 'Cancel', "$('task_#{@task.id}_progress_form').innerHTML = '';"%>
<% end %>